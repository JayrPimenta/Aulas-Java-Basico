package aplicacao;

import java.util.Locale;
import java.util.Scanner;

public class Programa {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Quantos funcioários deseja registrar? ");
		int numeroDeFuncionarios = sc.nextInt();
				
		for (int i = 0; i < numeroDeFuncionarios; i++) {
			System.out.println("Funcionário #"+(i+1)+":");
			System.out.print("Id: ");
			Integer idDoFuncionario = sc.nextInt();
			System.out.print("Nome: ");
			sc.hasNextLine();
			String nomeDoFuncionario = sc.nextLine();
			System.out.print("Salário: ");
			Double salarioDoFuncionario = sc.nextDouble();
		}
		
		sc.close();
	}

}
