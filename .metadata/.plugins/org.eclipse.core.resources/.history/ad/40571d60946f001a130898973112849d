package aplicacao;

import java.util.ArrayList;
import java.util.List;
import java.util.Locale;
import java.util.Scanner;

import entidades.Funcionario;

public class Programa {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		
		List<Funcionario> listaDeFuncionarios = new ArrayList<>();
		
		System.out.print("Quantos funcioários deseja registrar? ");
		int numeroDeFuncionarios = sc.nextInt();
		System.out.println();
				
		for (int i = 1; i <= numeroDeFuncionarios; i++) {
			System.out.println("Funcionário #"+ i +":");
			System.out.print("Id: ");
			Integer idDoFuncionario = sc.nextInt();
			sc.nextLine();
			System.out.print("Nome: ");
			String nomeDoFuncionario = sc.nextLine();
			System.out.print("Salário: ");
			Double salarioDoFuncionario = sc.nextDouble();
			System.out.println();
			listaDeFuncionarios.add(new Funcionario(idDoFuncionario, nomeDoFuncionario, salarioDoFuncionario));
			
		}
		
		System.out.print("Informe o codigo do funcionário que receberá o almento de salário: ");
		Integer id = sc.nextInt();
		
		Funcionario beneficiarioDoAumento = listaDeFuncionarios.stream().filter(idBeneficiario -> idBeneficiario.getIdDoFuncionario() == id).findFirst().orElse(null);
		
		for (Funcionario itens : listaDeFuncionarios) {
			System.out.println(beneficiarioDoAumento.getSalarioDoFuncionario());
		}
		
		/*
		
		
		if (listaDeFuncionarios.indexOf(id) >= 0) {
			int listaIndex = listaDeFuncionarios.indexOf(id);
			System.out.print("Informe o porcentual do aumento: ");
			Double porcentagemDeAumento = sc.nextDouble();
			
			
		} else {
			System.out.println("Id não informado, não existe.");
		}
		
				
		*/
		
		
		
		
		sc.close();
	}

}
